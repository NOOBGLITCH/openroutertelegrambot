{
  "engines": {
    "node": "18.x"  // Ensure this matches the Node.js version you intend to use
  },
  "env": {
    "SERVERLESS": "true"  // Boolean values should be lowercase in JSON
  },
  "routes": [
    {
      "src": "/",
      "dest": "/api/root.py"
    },
    {
      "src": "/api/bot/.*",
      "dest": "/api/bot.py"
    },
    {
      "src": "/updateWebhooks",
      "dest": "/api/webhooks.py"
    },
    {
      "src": "/api",
      "dest": "/",
      "status": 308
    },
    {
      "src": "/api/(?!bot).*",
      "dest": "/",
      "status": 308
    }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9"  // Ensure this matches the Python version you intend to use
    }
  }
}
